<h1 align="center">Listing all articles</h1>

<%= render 'article', resources: @articles %>

<nav aria-label="...">
  <ul class="pager">
    <li class="previous <%= @page == 0 ? 'hidden' : '' %>">
      <%= link_to_if @page > 0, "<< Previous", articles_path(page: @page - 1) %>
    </li>

    <li class="next">
      <%= link_to "Next >>", articles_path(page: @page + 1) %>
    </li>
  </ul>
</nav>
