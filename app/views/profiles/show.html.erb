<h1 align="center">Welcome to <%= @user.username %>'s page</h1>
<div class="row">
  <div class="col-md-4 col-md-offset-2 center">
    <%= gravatar_for @user, size: 30 %>
  </div>
</div>
<h4 align="center">
  <%= @user.username %>'s
  <%= pluralize(@user.articles.count, "article") if @user.articles %>
</h4>
<%= render 'articles/article', resources: @user.articles %>
