<h1 align="center">All Users</h1>

<div align="center">
  <% @users.each do |user| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to gravatar_for(user), profile_path(user) %></li>
          <li class="article-title"><%= link_to user.username, profile_path(user) %></li>
          <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
        </div>
      </div>
    </ul>
  <% end %>
</div>

<nav aria-label="...">
  <ul class="pager">
    <li class="previous <%= @page == 0 ? 'hidden' : '' %>">
      <%= link_to_if @page > 0, "<< Previous", profiles_path(page: @page - 1) %>
    </li>

    <li class="next">
      <%= link_to "Next >>", profiles_path(page: @page + 1) %>
    </li>
  </ul>
</nav>
